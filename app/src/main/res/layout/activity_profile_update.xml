<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_profile_update">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_profil">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#f0c40d"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="541dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Confirmer"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Nom"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="308dp" />

        <TextView
            android:id="@+id/textview_phone2"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Nom"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="308dp" />

        <TextView
            android:id="@+id/textview_rating"
            android:layout_width="152dp"
            android:layout_height="19dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Rating"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="430dp" />

        <TextView
            android:id="@+id/textview_adresse2"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Adresse"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="383dp" />

        <TextView
            android:id="@+id/textview_prenom2"
            android:layout_width="152dp"
            android:layout_height="17dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Prenom"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="346dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="34dp"


            app:cardBackgroundColor="#f0c40d"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="80dp">

            <TextView
                android:layout_width="322dp"
                android:layout_height="26dp"
                android:fontFamily="@font/allerta"
                android:text="Profile "
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/cardview1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Logo milieu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardview1"
            app:layout_constraintVertical_bias="0.248"
            app:srcCompat="@mipmap/client_connexion_foreground" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="80dp"


            app:cardBackgroundColor="#f0c40d">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="7dp"
                    android:contentDescription="Logo haut"
                    app:srcCompat="@drawable/logo_house_services2"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_below="@id/imageView"
                    android:layout_marginTop="-6dp"
                    android:fontFamily="@font/allerta"
                    android:gravity="center_horizontal"
                    android:text="Home Services"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold"


                    app:fontFamily="@font/allerta" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textview_adresse2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/gps"
            tools:layout_editor_absoluteY="383dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textview_prenom2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/nom"
            tools:layout_editor_absoluteY="346dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textview_phone"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/nom"
            tools:layout_editor_absoluteY="308dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="178dp"
            android:layout_height="36dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="3.5"
            android:visibility="visible"
            tools:background="efc416"
            tools:isIndicator="true"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="422dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textview_rating"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteY="430dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="36dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/phone"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="257dp" />

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Phone"
            android:text="+212 6 66 66 66 66"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:layout_editor_absoluteX="145dp" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>