<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".ClientFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/inscription_nom"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:hint="Nom"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_prenom"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_nom"
            android:hint="prenom"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"


            />
        <EditText
            android:id="@+id/inscription_mail"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_prenom"
            android:inputType="textEmailAddress"
            android:hint="@string/CONNEXION_email_hint"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_mail"
            android:textSize="16sp"

            />
        <EditText
            android:id="@+id/inscription_tel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_mail"
            android:inputType="phone"
            android:layout_margin="5dp"
            android:hint="Téléphone"
            android:drawableLeft="@drawable/ic_action_phone"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_password"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_tel"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:hint="@string/CONNEXION_password_hint"
            android:drawableLeft="@drawable/ic_action_password"
            android:textSize="16sp"

            />
        <EditText
            android:id="@+id/inscription_password_confirmation"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:textSize="16sp"
            android:hint="Confirmer mot de passe"
            />
        <EditText
            android:id="@+id/inscription_adresse"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password_confirmation"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_adresse"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_ville"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_adresse"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_adresse"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_cin"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_ville"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"
            />

        <Button
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_cin"
            android:text="Confirmer"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_password_oublier"
            android:layout_marginLeft="5dp"
        />




    </RelativeLayout>

</FrameLayout>