<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".ClientFragment"
    android:paddingBottom="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="15dp"
        >
        <EditText
            android:id="@+id/inscription_prenom_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:hint="@string/FORM_prenom_hint"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_nom_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_prenom_cl"
            android:hint="@string/FORM_nom_hint"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"


            />
        <EditText
            android:id="@+id/inscription_mail_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_nom_cl"
            android:inputType="textEmailAddress"
            android:hint="@string/CONNEXION_email_hint"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_mail"
            android:textSize="16sp"

            />
        <EditText
            android:id="@+id/inscription_tel_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_mail_cl"
            android:inputType="phone"
            android:layout_margin="5dp"
            android:hint="@string/FORM_phone_hint"
            android:drawableLeft="@drawable/ic_action_phone"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inscription_password"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_tel_cl"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:hint="@string/CONNEXION_password_hint"
            android:drawableLeft="@drawable/ic_action_password"
            android:textSize="16sp"

            />
        <EditText
            android:id="@+id/inscription_password_confirmation"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password"
            android:inputType="textPassword"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:textSize="16sp"
            android:hint="@string/FORM_password_confirmation_hint"
            />
        <EditText
            android:id="@+id/inscription_adresse"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password_confirmation"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_adresse"
            android:textSize="16sp"
            android:hint="@string/FORM_adresse_hint"
            />
        <EditText
            android:id="@+id/inscription_ville"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_adresse"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_adresse"
            android:textSize="16sp"
            android:hint="@string/FORM_ville_hint"
            />
        <EditText
            android:id="@+id/inscription_cin"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_ville"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:textSize="16sp"
            android:hint="@string/FORM_cin_hint"
            />

        <Button
            android:id="@+id/sign_in_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_cin"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectangle_password_oublier"
            android:text="@string/FORM_confirmation_button_hint"
            android:textAllCaps="false"
            android:textColor="#fff" />




    </RelativeLayout>

</FrameLayout>