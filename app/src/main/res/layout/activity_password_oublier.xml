<?xml version="1.0" encoding="utf-8"?> <!-- Othmane Feriani-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PasswordOublierActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_header1">
        <fragment
            android:name="com.example.sarah.ateliergl.HeaderFragment"
            android:id="@+id/fragment_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_header"
            ></fragment>
    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/fragment_header1"
        android:background="@drawable/background_shape_mail_and_pass">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mail_adresse"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Adresse e-mail"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:id="@+id/champ_email"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:hint="@string/CONNEXION_email_hint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="-7dp">
                <Button
                    android:layout_width="310dp"
                    android:layout_height="35dp"
                    android:text="TerminÃ©"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:background="@drawable/rectangle_password_oublier"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>







</RelativeLayout>