<?xml version="1.0" encoding="utf-8"?> <!-- Othmane Feriani-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        app:cardBackgroundColor="#f0c40d">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:id="@+id/rl1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:contentDescription="Logo haut"
                app:srcCompat="@drawable/logo_house_services2"
                android:layout_marginTop="7dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/imageView"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_horizontal"
                android:text="Home Services"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"


                app:fontFamily="@font/allerta" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_below="@id/cardview1"
        android:background="@drawable/background_shape_mail_and_pass">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:text="mot de passe" />

            <EditText
                android:id="@+id/password"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                android:hint="entrer le nouveau mot de passe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-7dp"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="310dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rectangle_password_oublier"
                    android:text="reinitialiser le mot de passe"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="17sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>







</RelativeLayout>