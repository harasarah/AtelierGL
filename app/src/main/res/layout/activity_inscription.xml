<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        app:cardBackgroundColor="#f0c40d">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:id="@+id/rl1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:contentDescription="Logo haut"
                app:srcCompat="@drawable/logo_house_services2"
                android:layout_marginTop="7dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/imageView"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_horizontal"
                android:text="Home Services"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"


                app:fontFamily="@font/allerta" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/logos_inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview1"
        android:gravity="center_horizontal"
        android:paddingTop="15dp">


    <ImageView
        android:id="@+id/logo_client"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_client"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:onClick="ChangeFragment"


        />
    <ImageView
        android:id="@+id/logo_prestataire"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_prestataire"
        android:layout_toRightOf="@id/logo_client"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:onClick="ChangeFragment"
        />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logos_inscription"
        android:gravity="center"
        >
        <fragment
            android:name="com.example.sarah.ateliergl.ClientFragment"
            android:id="@+id/fragment_inscription"
            android:layout_width="250dp"
            android:layout_height="300dp"
            ></fragment>

    </RelativeLayout>


</RelativeLayout>