<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".PrestataireFragment"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="15dp"

        >

        <EditText
            android:id="@+id/inscription_prenom_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:drawableStart="@drawable/ic_action_name"
            android:hint="@string/FORM_prenom_hint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inscription_nom_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_prenom_cl"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_name"
            android:hint="@string/FORM_nom_hint"
            android:textSize="16sp"


            />

        <EditText

            android:id="@+id/inscription_mail_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_nom_cl"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_mail"
            android:hint="@string/CONNEXION_email_hint"
            android:inputType="textEmailAddress"
            android:textSize="16sp"

            />

        <EditText
            android:id="@+id/inscription_tel_cl"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_mail_cl"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_phone"
            android:hint="@string/FORM_phone_hint"
            android:inputType="phone"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inscription_password"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_tel_cl"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:drawableStart="@drawable/ic_action_password"
            android:hint="@string/CONNEXION_password_hint"
            android:inputType="textPassword"
            android:textSize="16sp"

            />

        <EditText
            android:id="@+id/inscription_password_confirmation"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_password"
            android:hint="@string/FORM_password_confirmation_hint"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inscription_adresse"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_password_confirmation"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_adresse"
            android:hint="@string/FORM_adresse_hint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inscription_ville"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_adresse"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_adresse"
            android:hint="@string/FORM_ville_hint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inscription_cin"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/inscription_ville"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_action_name"
            android:hint="@string/FORM_cin_hint"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/check1"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_below="@id/inscription_cin"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <CheckBox
                android:id="@+id/pl"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/FORM_plomberie_hint" />

            <CheckBox
                android:id="@+id/ja"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/FORM_jardinage_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox2"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_below="@id/check1"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <CheckBox
                android:id="@+id/me"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/FORM_menage_hint" />

            <CheckBox
                android:id="@+id/el"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/FORM_electricite_hint"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox3"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_below="@id/checkbox2"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <CheckBox
                android:id="@+id/pe"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="@string/FORM_peinture_hint" />


        </LinearLayout>


        <Button
            android:id="@+id/sign_in_pres"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@id/checkbox3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle_password_oublier"
            android:text="@string/FORM_confirmation_button_hint"
            android:textAllCaps="false"

            android:textColor="#fff" />


    </RelativeLayout>

</FrameLayout>