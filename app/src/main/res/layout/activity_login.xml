<?xml version="1.0" encoding="utf-8"?> <!-- Othmane Feriani-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_header1">
        <fragment
            android:name="com.example.sarah.ateliergl.HeaderFragment"
            android:id="@+id/fragment_header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            ></fragment>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/fragment_header1"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Logo milieu"
        app:srcCompat="@drawable/logo_avatar_client"
        android:padding="25dp"/>


    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:hint="@string/CONNEXION_email_hint"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_mail"


        />


    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/edittext_email"
        android:layout_centerHorizontal="true"
        android:hint="@string/CONNEXION_password_hint"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:inputType="textPassword"



        />
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview_inscription"
        android:layout_below="@id/edittext_password"
        android:layout_centerHorizontal="true"
        >
    <TextView
        android:id="@+id/left1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CONNEXION_sinscrire"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="12sp"/>
        <TextView
            android:id="@+id/inscription_link"
            android:layout_toRightOf="@id/left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONNEXION_inscription_link"
            android:textColor="@color/clickable_link"
            android:textSize="12sp"
            android:clickable="true"
            android:layout_marginLeft="3dp"/>

</RelativeLayout>


    <RelativeLayout
        android:id="@+id/textview_password_oublier"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_inscription"
        android:layout_centerHorizontal="true"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left2"
        android:layout_centerHorizontal="true"
        android:text="@string/CONNEXION_password_oublier"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />
        <RelativeLayout
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:id="@+id/password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CONNEXION_password_link"
            android:textColor="@color/clickable_link"
            android:textSize="12sp"
            android:clickable="true"
            android:layout_marginLeft="3dp"/></RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/textview_password_oublier"
        >
        <Button
            android:id="@+id/confirmation_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/FORM_confirmation_button_hint"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_password_oublier"
            android:layout_marginTop="25dp"
            android:textSize="16sp"


            />
    </RelativeLayout>





</RelativeLayout>