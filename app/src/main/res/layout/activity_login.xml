<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        app:cardBackgroundColor="#f0c40d">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:id="@+id/rl1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:contentDescription="Logo haut"
                app:srcCompat="@drawable/logo_house_services2"
                android:layout_marginTop="7dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@id/imageView"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_horizontal"
                android:text="Home Services"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"


                app:fontFamily="@font/allerta" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/ic_electricite"
        android:layout_width="106dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        app:srcCompat="@drawable/electricite" />

    <TextView
        android:id="@+id/txt_electricite"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_electricite"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="18sp"
        android:text="ElectricitÃ©"
        android:textSize="18sp"
        android:typeface="normal"
        app:fontFamily="@font/allerta" />

    <ImageView
        android:id="@+id/ic_jardinage"
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="113dp"
        app:srcCompat="@drawable/jardinage" />

    <TextView
        android:id="@+id/txt_jardinage"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_electricite"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:lineSpacingExtra="18sp"
        android:text="Jardinage"
        android:textSize="18sp"
        android:typeface="normal"
        app:fontFamily="@font/allerta" />

    <ImageView
        android:id="@+id/ic_peinture"
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_below="@+id/txt_jardinage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/peinture" />

    <ImageView
        android:id="@+id/ic_peinture2"
        android:layout_width="104dp"
        android:layout_height="94dp"
        android:layout_below="@+id/txt_jardinage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/peinture"
        tools:srcCompat="@drawable/menage" />

    <TextView
        android:id="@+id/txt_peinture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_peinture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:lineSpacingExtra="18sp"
        android:text="Peinture"
        android:textSize="18sp"
        android:typeface="normal"
        app:fontFamily="@font/allerta" />

    <TextView
        android:id="@+id/txt_menage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_peinture"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="18sp"
        android:text="Menage"
        android:textSize="18sp"
        android:typeface="normal"
        app:fontFamily="@font/allerta" />

    <ImageView
        android:id="@+id/ic_plomberie"
        android:layout_width="107dp"
        android:layout_height="93dp"
        android:layout_below="@+id/ic_peinture"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/plomberie" />

    <TextView
        android:id="@+id/txt_plomberie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_plomberie"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="18sp"
        android:text="Plomberie"
        android:textSize="18sp"
        android:typeface="normal"
        app:fontFamily="@font/allerta" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#f0c40d">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>




</RelativeLayout>